{% extends 'layout.twig' %}

{% block body %}
  <section class="blog__header">
    <a href="/" class="blog__avatar"><img src="/img/avatar.jpg" alt="Фото"></a>
    Заметки Виктора Колба. Альфа версия
  </section>
  <article class="articles">
    {% for post in posts %}
      <section class="article__item">
        <h2>{{ post.title }}</h2>
        <p>
          {{ post.body }}
        </p>
        <small>{{ post.posted_formatted }}</small>
        {% if (admin) %}
          <a href="/blog/edit/{{ post._id }}">редактировать</a>
        {% endif %}
      </section>
    {% endfor %}
  </article>
  <footer class="blog__footer">
    © Виктор Колб, 2017
  </footer>
{% endblock %}